MODULE  ideal_polytropic_gas

!   PRIVATE

   REAL(KIND=8), PUBLIC, PARAMETER  ::  gamma_ = 1.4

   REAL(KIND=8), PUBLIC, PARAMETER  ::  gamma_m1_ =  gamma_ - 1,              &
                                        gamma_p1_ =  gamma_ + 1,              &
                                           alpha_ = (gamma_ - 1)/2,           &
                                            beta_ = (gamma_ + 1)/(gamma_ - 1),&
                                             tau_ = (gamma_ - 1)/(2*gamma_)

END MODULE  ideal_polytropic_gas
